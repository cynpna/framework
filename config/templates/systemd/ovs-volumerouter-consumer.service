[Unit]
Description=Open vStorage volumerouter consumer
Requires=ovs-watcher-framework<_SERVICE_SUFFIX_>.service
After=ovs-watcher-framework<_SERVICE_SUFFIX_>.service

[Service]
Type=simple
Environment=PYTHONPATH=/opt/OpenvStorage
WorkingDirectory=/opt/OpenvStorage
ExecStart=/usr/bin/python2 /opt/OpenvStorage/ovs/extensions/rabbitmq/consumer.py volumerouter --durable
Restart=on-failure
RestartSec=5
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
